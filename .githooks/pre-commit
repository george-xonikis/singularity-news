#!/bin/bash

# Pre-commit hook to remind about updating GIT_HISTORY.md

# Color codes for output
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

# Check if GIT_HISTORY.md has been modified
if git diff --cached --name-only | grep -q "GIT_HISTORY.md"; then
    echo -e "${GREEN}✓ GIT_HISTORY.md has been updated${NC}"
else
    echo -e "${YELLOW}⚠️  WARNING: GIT_HISTORY.md has not been updated${NC}"
    echo -e "${YELLOW}   Don't forget to update the git history with this commit!${NC}"
    echo ""
    echo -e "Do you want to continue without updating GIT_HISTORY.md? (y/n)"
    read -n 1 -r < /dev/tty
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo -e "${RED}Commit aborted. Please update GIT_HISTORY.md first.${NC}"
        exit 1
    fi
fi

# Run linting if available
if command -v pnpm &> /dev/null; then
    echo "Running lint checks..."
    pnpm lint:fix 2>/dev/null || true
fi

exit 0